<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SqlBuildManager.Services.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="SqlBuildManager.Services" vmsize="Small">
    <Runtime executionContext="elevated" />
    <Startup>
      <Task commandLine="install.cmd" executionContext="elevated" taskType="simple">
        <Environment>
          <Variable name="PathToNETFXInstall">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/LocalResources/LocalResource[@name='NETFXInstall']/@path" />
          </Variable>
        </Environment>
      </Task>
      <Task commandLine="Azure\Startup.cmd" executionContext="elevated" taskType="simple" />
    </Startup>
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InstanceInputEndpoint name="InstanceDynamic" localPort="80" protocol="tcp">
        <AllocatePublicPortFrom>
          <FixedPortRange min="10000" max="10100" />
        </AllocatePublicPortFrom>
      </InstanceInputEndpoint>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="RunLogFiles" cleanOnRoleRecycle="true" sizeInMB="500" />
      <LocalStorage name="NETFXInstall" cleanOnRoleRecycle="false" sizeInMB="1024"  />
    </LocalResources>
  </WebRole>
</ServiceDefinition>